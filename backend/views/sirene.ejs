<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>INSEE - SIRENE</title>
        <!--Bootstrap CSS-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container">
                <h2 class="navbar-brand h4 mb-0">APIs externes</h2>
                <button class="navbar-toggler">
                    <span class="navbar-toggle-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="http://localhost:5000/">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="http://localhost:5000/sirene">SIRENE</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="http://localhost:5000/sirene">BDM</a>
                        </li>
                        <!--Dropdown-->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" 
                                href="#"
                                id="navbarDropdown"
                                role="button"
                                data-bs-toggle="dropdown"
                                aria-haspopup="true"
                                aria-expanded="false">
                                Données locales
                            </a>
                            <div class="dropdown-menu" aria-labelledbt="navbarDropdown">
                                <a class="dropdown-item" href="#">Recencement de la population</a>
                                <a class="dropdown-item" href="#">FiLoSoFi</a>
                                <a class="dropdown-item" href="#">Flores</a>
                                <a class="dropdown-item" href="#">Population légale</a>
                                <a class="dropdown-item" href="#">Etat-Civil</a>
                                <a class="dropdown-item" href="#">Répertoire des Entreprises et des Etablissements</a>
                                <a class="dropdown-item" href="#">Tourisme</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="http://localhost:5000/sirene">Métadonnées</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container mt-5">
            <h1 class="mb-4">Données de l'API INSEE SIRENE</h1>

            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <th>SIRET</th>
                    <th>Statut</th>
                    <th>Date de création</th>
                    <th>Activité Principale</th>
                    <th>Adresse</th>
                </thead>
                <tbody>
                    <% entreprises.forEach(etablissement => { %>
                        <tr>
                            <td><%= etablissement.siret ? etablissement.siret : 'N/A' %></td>
                            <td><%= etablissement.statutDiffusionEtablissement ? etablissement.statutDiffusionEtablissement : 'N/A' %></td>
                            <td><%= etablissement.dateCreationEtablissement ? etablissement.dateCreationEtablissement : 'N/A' %></td>
                            <td><%= etablissement.activitePrincipaleRegistreMetiersEtablissement ? etablissement.activitePrincipaleRegistreMetiersEtablissement : 'N/A' %></td>
                            <td><%= formatAddress(etablissement.adresseEtablissement) %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        
        <% function formatAddress(address) { %>
            <%= address.complementAdresseEtablissement ?  address.complementAdresseEtablissement + ' ' : 'N/A' %>
            <%= address.libelleVoieEtablissement ?  address.libelleVoieEtablissement + ' ' : 'N/A' %>
            <%= address.codePostalEtablissement ?  address.codePostalEtablissement + ' ' : 'N/A' %>
            <%= address.libelleCommuneEtablissement ?  address.libelleCommuneEtablissement : 'N/A' %>
        <% } %>

        <!-- Ajouter Bootstrap JS (selon les fonctionnalités utilisées) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>