<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Accueil</title>
        <!--Bootstrap CSS-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <h1 class="mb-4">Données de l'API INSEE SIRENE</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <th>SIRET</th>
                <th>Statut</th>
                <th>Date de création</th>
                <th>Activité Principale</th>
                <th>Adresse</th>
            </thead>
            <tbody>
                <% entreprises.forEach(etablissement => { %>
                    <tr>
                        <td><%= etablissement.siret %></td>
                        <td><%= etablissement.statutDiffusionEtablissement %></td>
                        <td><%= etablissement.dateCreationEtablissement %></td>
                        <td><%= etablissement.activitePrincipaleRegistreMetiersEtablissement %></td>
                        <td><%= formatAddress(etablissement.adresseEtablissement) %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <% function formatAddress(address) { %>
            <%= address.complementAdresseEtablissement ?  address.complementAdresseEtablissement + ' ' : '' %>
            <%= address.libelleVoieEtablissement ?  address.libelleVoieEtablissement + ' ' : '' %>
            <%= address.codePostalEtablissement ?  address.codePostalEtablissement + ' ' : '' %>
            <%= address.libelleCommuneEtablissement ?  address.libelleCommuneEtablissement : '' %>
        <% } %>

        <!-- Ajouter Bootstrap JS (selon les fonctionnalités utilisées) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>